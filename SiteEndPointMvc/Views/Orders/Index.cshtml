@using SadeghiBasicMarket.Application.Services.Queries.GetUserOrders
@model List<GetUserOrdersDto>
 
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>سفارشات شما</h1>

<table style="border:dashed" class="table table-responsive table-active table-bordered">
    <thead>
        <tr style="border:solid">
            <th>شماره سفارش</th>
            <th>شماره فاکتور</th>
            <th>وضعیت سفارش</th>
            <th>محصولات در این سفارش</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="border:solid">
                <td>@item.OrderId</td>
                <td>@item.RequestPayId </td>
                <td>@item.OrderState </td>
                

                <td>
                    <table>
                         <thead>
        <tr style="border:solid">
            <th>نام محصول</th>
            <th>قیمت</th>
            <th>تعداد سفارش</th>
        </tr>
    </thead>
     <tbody>
                        @foreach (var detail in item.OrderDetails)
                        {
                         <tr  style="border:outset">
                             <td> @detail.ProductName</td>
                             <td> @detail.Price</td>
                             <td> @detail.Count</td>
                         </tr>
                        }
                        </tbody>
                    </table>

                </td>
            </tr>
        }

    </tbody>
</table>
